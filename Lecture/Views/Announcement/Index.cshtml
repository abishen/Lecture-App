@model IEnumerable<Lecture.Models.Announcements>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Annoucment</h2>

@if(ViewBag.Admin == true){

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bodymessage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateReleased)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title )
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bodymessage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateReleased)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}


</table>
}
else
{
    foreach (var item in Model)
    {


        <div class="text-center">
            <div class="annoucment">
                <h1>  @Html.DisplayFor(modelItem => item.Title, new { @class = "container" })</h1>
                <br />



                <h4> Date @Html.DisplayFor(modelItem => item.DateReleased) </h4>

                <br />
                <h3>  @Html.DisplayFor(modelItem => item.Bodymessage)</h3>
                <br />

            </div>

        </div>
    }

} 

<style>


    .annoucment {
    
    width : 200px;

    min-height:100px;
    background-color:violet;
    
    position:relative;


    color:white;
    right:-400px;


    }


</style>
